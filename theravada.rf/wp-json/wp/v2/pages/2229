43c, \u0440\u0430\u0437\u0434\u0430\u0432\u0430\u043b\u0438 \u043c\u0438\u043b\u043e\u0441\u0442\u044b\u043d\u044e \u0434\u043e \u043f\u043e\u043b\u0443\u0434\u043d\u044f, \u043a\u0430\u0436\u0434\u044b\u0439 \u0432 \u0441\u043e\u043e\u0442\u0432\u0435\u0442\u0441\u0442\u0432\u0438\u0438 \u0441\u043e \u0441\u0432\u043e\u0438\u043c\u0438 \u0441\u0440\u0435\u0434\u0441\u0442\u0432\u0430\u043c\u0438. \u041f\u0440\u0438\u043d\u044f\u0432 \u0435\u0434\u0443 \u0432 \u043f\u043e\u043b\u043e\u0436\u0435\u043d\u043d\u043e\u0435 \u0432\u0440\u0435\u043c\u044f (\u0434\u043e \u043f\u043e\u043b\u0443\u0434\u043d\u044f), \u043e\u0434\u0435\u0442\u044b\u0435 \u0432 \u0447\u0438\u0441\u0442\u044b\u0435 \u043e\u0434\u0435\u044f\u043d\u0438\u044f, \u0432 \u0431\u0435\u043b\u044b\u0445 \u043d\u0430\u043a\u0438\u0434\u043a\u0430\u0445, \u0441 \u0431\u043b\u0430\u0433\u043e\u0432\u043e\u043d\u0438\u044f\u043c\u0438 \u0438 \u0446\u0432\u0435\u0442\u0430\u043c\u0438 \u0432 \u0440\u0443\u043a\u0430\u0445, \u0432\u043e \u0432\u0442\u043e\u0440\u043e\u0439 \u043f\u043e\u043b\u043e\u0432\u0438\u043d\u0435 \u0434\u043d\u044f, \u043e\u043d\u0438 \u043f\u043e\u0448\u043b\u0438 \u043a \u043c\u043e\u043d\u0430\u0441\u0442\u044b\u0440\u044e, \u0432 \u043a\u043e\u0442\u043e\u0440\u043e\u043c \u043d\u0430\u0445\u043e\u0434\u0438\u043b\u0438\u0441\u044c \u043c\u043e\u043d\u0430\u0445\u0438, \u043a\u043e\u0442\u043e\u0440\u044b\u0435 \u0432\u0434\u043e\u0445\u043d\u043e\u0432\u043b\u044f\u044e\u0442 \u0443\u043c, \u0430 \u0432\u0435\u0447\u0435\u0440\u043e\u043c \u0441\u043b\u0443\u0448\u0430\u043b\u0438 \u0414\u0445\u0430\u043c\u043c\u0443. \u0412 \u0442\u043e \u0432\u0440\u0435\u043c\u044f, \u043a\u0430\u043a \u043e\u043d\u0438 \u0432\u0441\u0435 \u0435\u0449\u0435 \u0441\u043b\u0443\u0448\u0430\u043b\u0438 (\u043c\u043e\u043d\u0430\u0445\u043e\u0432), \u0440\u0435\u0448\u0438\u0432 \u043e\u0441\u0442\u0430\u0442\u044c\u0441\u044f (\u043d\u0430 \u043d\u043e\u0447\u044c) \u0432 \u043c\u043e\u043d\u043
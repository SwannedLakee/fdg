0430\u0448\u0435\u0433\u043e \u0411\u0443\u0434\u0434\u044b \u0421\u0430\u043a\u044c\u044f\u043c\u0443\u043d\u0438, \u043e\u043d \u0434\u043e\u043b\u0436\u0435\u043d \u0431\u044b\u043b, \u043f\u043e\u043b\u0443\u0447\u0438\u0432 \u043f\u0440\u043e\u0440\u043e\u0447\u0435\u0441\u0442\u0432\u043e \u043e\u0442 \u0411\u0443\u0434\u0434\u044b \u0414\u0438\u043f\u0430\u043d\u043a\u0430\u0440\u044b, \u043f\u0440\u043e\u0434\u043e\u043b\u0436\u0430\u0442\u044c \u0440\u0430\u0437\u0432\u0438\u0432\u0430\u0442\u044c \u0414\u043e\u0431\u0440\u043e\u0434\u0435\u0442\u0435\u043b\u0438 \u0432 \u0442\u0435\u0447\u0435\u043d\u0438\u0435 \u0447\u0435\u0442\u044b\u0440\u0435\u0445 \u043d\u0435\u0438\u0441\u0447\u0438\u0441\u043b\u0438\u043c\u044b\u0445 \u0410\u0441\u0430\u043d\u043a\u0435\u0435\u0432 \u0438 \u0441\u0442\u0430 \u0442\u044b\u0441\u044f\u0447 \u044d\u043e\u043d\u043e\u0432, \u0434\u043e \u0438\u0445 \u043f\u043e\u043b\u043d\u043e\u0433\u043e \u0441\u043e\u0437\u0440\u0435\u0432\u0430\u043d\u0438\u044f. \u041c\u0435\u0436\u0434\u0443 \u043f\u0440\u043e\u0432\u043e\u0437\u0433\u043b\u0430\u0448\u0435\u043d\u0438\u0435\u043c \u043e\u043f\u0440\u0435\u0434\u0435\u043b\u044f\u044e\u0449\u0435\u0433\u043e \u043f\u0440\u043e\u0440\u043e\u0447\u0435\u0441\u0442\u0432\u0430 \u0438 \u0441\u0432\u043e\u0435\u0439 \u043f\u0440\u0435\u0434\u043f\u043e\u0441\u043b\u0435\u0434\u043d\u0435\u0439 \u0436\u0438\u0437\u043d\u044c\u044e, \u0411\u043e\u0434\u0445\u0438\u0441\u0430\u0442\u0432\u0430 \u0438\u0437-\u0437\u0430 \u0441\u0432\u043e\u0435\u0439 \u043d\u0435\u0437\u0434\u0440\u0430\u0432\u043e\u0439 \u043f\u0440\u043e\u0448\u043b\u043e\u0439 \u043a\u0430\u043c\u043c\u044b \u0438\u043d\u043e\u0433\u0434\u0430 \u043f\u0435\u0440\u0435\u0440\u043e\u0436\u0434\u0430\u043b\u0441\u044f \u0436\u0438\u0432\u043e\u0442\u043d\u044b\u043c. \u0412 \u0442\u043e \u0432\u0440\u0435\u043c\u044f \u043e\u043d \u0435\u0449\u0435 \u043d\u0435 \u0431\u044b\u043b \u0441\u043f\u043e\u0441\u043e\u0431\u043
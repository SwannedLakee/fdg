43b \u0441\u0435\u0431\u0435 \u0432 \u043a\u0430\u0447\u0435\u0441\u0442\u0432\u0435 \u0446\u0430\u0440\u0438\u0446 \u0442\u043e\u043b\u044c\u043a\u043e \u0434\u0432\u0443\u0445 \u0436\u0435\u043d\u0449\u0438\u043d: \u041c\u0430\u043b\u0438\u043a\u0443 (Mallik\u0101) \u0438 \u0412\u0430\u0441\u0430\u0431\u0445\u0443 (V\u0101sabh\u0101). \u041e\u0431\u044b\u0447\u043d\u043e \u043f\u0440\u0435\u0434\u043f\u043e\u0447\u0438\u0442\u0430\u044f \u043d\u0430\u0441\u043b\u0430\u0436\u0434\u0430\u0442\u044c\u0441\u044f \u043e\u0431\u0449\u0435\u0441\u0442\u0432\u043e\u043c \u0446\u0430\u0440\u0438\u0446\u044b \u041c\u0430\u043b\u0438\u043a\u0438, \u0432 \u0446\u0430\u0440\u0441\u0442\u0432\u043e \u0421\u0430\u043a\u044c\u0435\u0432 \u043e\u043d \u043f\u0443\u0442\u0435\u0448\u0435\u0441\u0442\u0432\u043e\u0432\u0430\u043b \u0441 \u0446\u0430\u0440\u0438\u0446\u0435\u0439 \u0412\u0430\u0441\u0430\u0431\u0445\u043e\u0439.<\/span><\/p>\n<p><span style=\"font-size: 20px;\">\u0422\u0440\u0435\u0442\u0438\u0439 \u0432\u0438\u0434 \u0432\u043e\u0437\u0434\u0435\u0440\u0436\u0430\u043d\u0438\u044f, \u0432\u043e\u0437\u0434\u0435\u0440\u0436\u0430\u043d\u0438\u0435 \u043e\u0442 \u043f\u0440\u043e\u0441\u0442\u0443\u043f\u043a\u043e\u0432 \u0447\u0443\u0432\u0441\u0442\u0432\u0435\u043d\u043d\u043e\u0441\u0442\u0438, \u0432\u043a\u043b\u044e\u0447\u0430\u0435\u0442 \u0432 \u0441\u0435\u0431\u044f \u043f\u044f\u0442\u044b\u0439 \u043e\u0431\u0435\u0442: \u0432\u043e\u0437\u0434\u0435\u0440\u0436\u0430\u043d\u0438\u0435 \u043e\u0442 \u0438\u0441\u043f\u043e\u043b\u044c\u0437\u043e\u0432\u0430\u043d\u0438\u044f \u043e\u0434\u0443\u0440\u043c\u0430\u043d\u0438\u0432\u0430\u044e\u0449\u0438\u0445 \u0432\u0435\u0449\u0435\u0441\u0442\u0432. \u0410\u043d\u0433\u043b\u0438\u0439\u0441\u043a\u0430\u044f \u0444\u043e\u0440\u043c\u0443\u043b\u0438\u0440\u043e\u0432\u043a\u0430 \u044d\u0442\u043e\u0433\u043e \u043e\u0431\u0435\u0442\u0430 \u043f\u0440\u043e\u0438\u0441\u0445\u043e\u0434\u0438\u04
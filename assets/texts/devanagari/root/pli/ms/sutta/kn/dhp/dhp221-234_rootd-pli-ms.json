{	
"dhp221:0.1":	"खुद्दकनिकाय ",
"dhp221:0.2":	"धम्मपद ",
"dhp221:0.3":	"कोधवग्ग ",
"dhp221:0.4":	"रोहिनीखत्तियकञ्ञावत्थु ",
"dhp221:1":	"कोधं जहे विप्पजहेय्य मानं, ",
"dhp221:2":	"संयोजनं सब्बमतिक्कमेय्य; ",
"dhp221:3":	"तं नामरूपस्मिमसज्जमानं, ",
"dhp221:4":	"अकिञ्चनं नानुपतन्ति दुक्खा। ",
"dhp222:0":	"अञ्ञतरभिक्खुवत्थु ",
"dhp222:1":	"यो वे उप्पतितं कोधं, ",
"dhp222:2":	"रथं भन्तंव वारये; ",
"dhp222:3":	"तमहं सारथिं ब्रूमि, ",
"dhp222:4":	"रस्मिग्गाहो इतरो जनो। ",
"dhp223:0":	"उत्तराउपासिकवत्थु ",
"dhp223:1":	"अक्कोधेन जिने कोधं, ",
"dhp223:2":	"असाधुं साधुना जिने; ",
"dhp223:3":	"जिने कदरियं दानेन, ",
"dhp223:4":	"सच्चेनालिकवादिनं। ",
"dhp224:0":	"महामोग्गल्लानपञ्हवत्थु ",
"dhp224:1":	"सच्चं भणे न कुज्झेय्य, ",
"dhp224:2":	"दज्जा अप्पम्पि याचितो; ",
"dhp224:3":	"एतेहि तीहि ठानेहि, ",
"dhp224:4":	"गच्छे देवान सन्तिके। ",
"dhp225:0":	"बुद्धपितुब्राह्मणवत्थु ",
"dhp225:1":	"अहिंसका ये मुनयो, ",
"dhp225:2":	"निच्चं कायेन संवुता; ",
"dhp225:3":	"ते यन्ति अच्चुतं ठानं, ",
"dhp225:4":	"यत्थ गन्त्वा न सोचरे। ",
"dhp226:0":	"पुण्णदासीवत्थु ",
"dhp226:1":	"सदा जागरमानानं, ",
"dhp226:2":	"अहोरत्तानुसिक्खिनं; ",
"dhp226:3":	"निब्बानं अधिमुत्तानं, ",
"dhp226:4":	"अत्थं गच्छन्ति आसवा। ",
"dhp227:0":	"अतुलौपासकवत्थु ",
"dhp227:1":	"पोराणमेतं अतुल, ",
"dhp227:2":	"नेतं अज्जतनामिव; ",
"dhp227:3":	"निन्दन्ति तुण्हिमासीनं, ",
"dhp227:4":	"निन्दन्ति बहुभाणिनं; ",
"dhp227:5":	"मितभाणिम्पि निन्दन्ति, ",
"dhp227:6":	"नत्थि लोके अनिन्दितो। ",
"dhp228:1":	"न चाहु न च भविस्सति, ",
"dhp228:2":	"न चेतरहि विज्जति; ",
"dhp228:3":	"एकन्तं निन्दितो पोसो, ",
"dhp228:4":	"एकन्तं वा पसंसितो। ",
"dhp229:1":	"यञ्चे विञ्ञू पसंसन्ति, ",
"dhp229:2":	"अनुविच्च सुवे सुवे; ",
"dhp229:3":	"अच्छिद्दवुत्तिं मेधाविं, ",
"dhp229:4":	"पञ्ञासीलसमाहितं। ",
"dhp230:1":	"निक्खं जम्बोनदस्सेव, ",
"dhp230:2":	"को तं निन्दितुमरहति; ",
"dhp230:3":	"देवापि नं पसंसन्ति, ",
"dhp230:4":	"ब्रह्मुनापि पसंसितो। ",
"dhp231:0":	"छब्बग्गियवत्थु ",
"dhp231:1":	"कायप्पकोपं रक्खेय्य, ",
"dhp231:2":	"कायेन संवुतो सिया; ",
"dhp231:3":	"कायदुच्चरितं हित्वा, ",
"dhp231:4":	"कायेन सुचरितं चरे। ",
"dhp232:1":	"वचीपकोपं रक्खेय्य, ",
"dhp232:2":	"वाचाय संवुतो सिया; ",
"dhp232:3":	"वचीदुच्चरितं हित्वा, ",
"dhp232:4":	"वाचाय सुचरितं चरे। ",
"dhp233:1":	"मनोपकोपं रक्खेय्य, ",
"dhp233:2":	"मनसा संवुतो सिया; ",
"dhp233:3":	"मनोदुच्चरितं हित्वा, ",
"dhp233:4":	"मनसा सुचरितं चरे। ",
"dhp234:1":	"कायेन संवुता धीरा, ",
"dhp234:2":	"अथो वाचाय संवुता; ",
"dhp234:3":	"मनसा संवुता धीरा, ",
"dhp234:4":	"ते वे सुपरिसंवुता। ",
"dhp234:5":	"कोधवग्गो सत्तरसमो। "
}	

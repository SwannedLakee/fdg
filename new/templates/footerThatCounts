  // s param & div keywprd
   
let params = new URLSearchParams(document.location.search);
let finder = params.get("s");
let keyword;

// check element with class "keyword"
let keywordElement = document.querySelector('.keyword');
if (keywordElement) {
    keyword = keywordElement.textContent.trim();
} else {
    keyword = ""; // Значение по умолчанию, если элемент не найден
}

// using value from "s" or "keyword"
//let searchValue = finder && finder.trim() !== "" ? finder : keyword;
let searchValue = finder && finder.trim() !== "" ? finder : keyword.replace(/\\b/g, '');


// check element with class "searchlang"
let searchlangElement = document.querySelector('.searchlang');
if (searchlangElement) {
    searchlang = searchlangElement.textContent.trim();
} else {
    searchlang = ""; // Значение по умолчанию, если элемент не найден
}

// добавляем переменную для хранения количества совпадений
let MatchesCount = 0;

// если searchlang = pi, то ищем совпадения в цитате с классом quote и lang=pi
if (searchlang === "pi") {
    quotelLang = "pi";
} else {
    quotelLang = "en";  
}

// Создаем регулярное выражение для поиска совпадений
let regex = new RegExp(searchValue + '(?![^<]*>)', 'gi');

// Обнуляем MatchesCount для каждой строки
let rowMatchesCounts = [];

// Проходим по каждой строке в таблице
table.rows().every(function () {
    // Получаем данные текущей строки в колонке с индексом 7
    let rowData = this.data()[7];

let $rowData = $(rowData);

    let quotes = $rowData.find('.quote[lang="' + quotelLang + '"]');
    
        let matches = 0;
    quotes.each(function () {
        let quoteText = $(this).text().trim();
        matches += (quoteText.match(regex) || []).length;
    });
    // Подсчитываем количество совпадений для текущей строки
 //   let matches = (rowData.match(regex) || []).length;
    
    // Добавляем количество совпадений в массив
    rowMatchesCounts.push(matches);

    return true; 
});

// print results
rowMatchesCounts.forEach(function (count, index) {
    console.log("Number of matches in line " + index + ": " + count);

    table.cell(index, 3).data("" + count).draw();
});


// Суммируем все значения в массиве rowMatchesCounts
let totalMatchesCount = rowMatchesCounts.reduce((total, count) => total + count, 0);

console.log("Общее количество совпадений: " + totalMatchesCount);


if (searchValue !== "") {
    // Получаем таблицу DataTables по ее id

    // Получаем все строки таблицы
    table.rows().every(function(rowIdx, tableLoop, rowLoop) {
        // Получаем данные в текущей строке
        var rowData = this.data();

        // Проходим по каждому элементу данных в строке
        rowData.forEach(function(cellData, index) {
            if (index !== 0) {
                // Применяем регулярное выражение к содержимому ячейки и подсвечиваем совпадения
                var regex = new RegExp(searchValue + '(?![^<]*>)', 'gi');
                // var regex = new RegExp(finder, 'gi'); // 'gi' - игнорировать регистр
                cellData = cellData.replace(regex, function(match) {
                    return '<b class="match finder">' + match + '</b>';
                });

                // Обновляем содержимое ячейки с примененной подсветкой
                table.cell(rowIdx, index).data(cellData);
            }
        });
    });

    // Перерисовываем таблицу для применения изменений
    
}
table.draw(false);

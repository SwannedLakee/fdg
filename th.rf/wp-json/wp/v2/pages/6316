43a \u0430\u043c\u0431\u0438\u0446\u0438\u0438 \u043f\u043e\u043b\u043d\u043e\u0441\u0442\u044c\u044e \u0441\u043e\u0441\u0440\u0435\u0434\u043e\u0442\u043e\u0447\u0435\u043d\u044b \u043d\u0430 \u0446\u0435\u043b\u0438, \u043f\u0440\u043e\u0441\u0442\u043e\u0435 \u0441\u0442\u0440\u0435\u043c\u043b\u0435\u043d\u0438\u0435 \u043d\u0438\u043a\u043e\u0433\u0434\u0430 \u043d\u0435 \u0442\u0435\u0440\u044f\u0435\u0442 \u0438\u0437 \u0432\u0438\u0434\u0443 \u043d\u0438 \u0446\u0435\u043b\u0438, \u043d\u0438 \u0441\u0440\u0435\u0434\u0441\u0442\u0432, \u0438\u0441\u043f\u043e\u043b\u044c\u0437\u0443\u0435\u043c\u044b\u0445 \u0434\u043b\u044f \u0435\u0451 \u0434\u043e\u0441\u0442\u0438\u0436\u0435\u043d\u0438\u044f. \u041f\u043e\u0441\u043b\u0435 \u0434\u043e\u0441\u0442\u0438\u0436\u0435\u043d\u0438\u044f \u0441\u0432\u043e\u0435\u0439 \u0446\u0435\u043b\u0438, \u0441\u0442\u0440\u0435\u043c\u043b\u0435\u043d\u0438\u0435 \u043f\u043e\u0437\u0432\u043e\u043b\u044f\u0435\u0442 \u043d\u0430\u043c \u00ab\u0441\u0432\u043e\u0431\u043e\u0434\u043d\u043e \u0434\u044b\u0448\u0430\u0442\u044c\u00bb (ass\u0101sa, M.I, 64), \u043f\u043e\u0442\u043e\u043c\u0443 \u0447\u0442\u043e \u043c\u044b \u0437\u043d\u0430\u0435\u043c, \u0447\u0442\u043e \u0432\u044b\u043f\u043e\u043b\u043d\u0438\u043b\u0438 \u0437\u0430\u0434\u0443\u043c\u0430\u043d\u043d\u043e\u0435, \u043d\u0435 \u043f\u043e\u0441\u0442\u0430\u0432\u0438\u0432 \u043f\u0440\u0438 \u044d\u0442\u043e\u043c \u043f\u043e\u0434 \u0443\u0433\u0440\u043e\u0437\u0443 \u0441\u0432\u043e\u0438 \u0446\u0435\u043d\u043d\u043e\u0441\u0442\u0438, \u0438 \u043d\u0435 \u043f\u0440\u0438\u0447\u0438\u043d\u0438\u043b\u0438 \u0432\u0440\u0435\u0434 \u0434\u0440\u0443\u0433\u0438\u043c \u043b\u044e\u0434\u044f\u043c. \u0421\u0442\u0440\u0435\u043c\u044f\u0449\u0438\u0439\u0441\u044f \u0442\u0430\u043a\u0436\u0435 \u043f\u043e\u043d\u0438\u043c\u0430\u0435\u0442, \u0447\u0442\u043e \u0445\u043e\u0442\u044f \u043c\u0438\u0440\u0441\u043a\u0438\u0435 \u0446\u0435\u043b\u0438 \u0438 \u043c\u043e\u0433\u0443\u0442 \u0431\u044b\u0442\u044c \u043f\u043e\u043b\u0435\u0437\u043d\u044b\u043c\u0438 \u0432 \u044d\u0442\u043e\u0439 \u0436\u0438\u0437\u043d\u0438, \u0434\u0443\u0445\u043e\u0432\u043d\u044b\u0435 \u0446\u0435\u043b\u0438 \u043f\u0440\u0438\u043d\u043e\u0441\u044f\u0442 \u043d\u0430\u043c \u043f\u043e\u043b\u044c\u0437\u0443 \u043a\u0430\u043a \u0432 \u044d\u0442\u043e\u0439, \u0442\u0430\u043a \u0438 \u0432 \u0441\u043b\u0435\u0434\u0443\u044e\u0449\u0435\u0439 \u0436\u0438\u0437\u043d\u0438 \u0438, \u0432 \u043a\u043e\u043d\u0435\u0447\u043d\u043e\u043c \u0441\u0447\u0435\u0442\u0435, \u043f\u0440\u0438\u0432\u0435\u0434\u0443\u0442 \u043d\u0430\u0441 \u043a \u0441\u043e\u0441\u0442\u043e\u044f\u043d\u0438\u044e \u043f\u043e\u043b\u043d\u043e\u0433\u043e \u043e\u0441\u0443\u0449\u0435\u0441\u0442\u0432\u043b\u0435\u043d\u0438\u044f, \u0442\u043e \u0435\u0441\u0442\u044c \u043a \u041d\u0438\u0431\u0431\u0430\u043d\u0435, \u0433\u0434\u0435 \u0431\u043e\u043b\u044c\u0448\u0435 \u043d\u0430\u043c \u043d\u0435 \u043d\u0443\u0436\u043d\u043e \u0431\u0443\u0434\u0435\u0442 \u0441\u0442\u0440\u0435\u043c\u0438\u0442\u044c\u0441\u044f \u043a \u043a\u0430\u043a\u043e\u0439-\u043b\u0438\u0431\u043e \u0446\u0435\u043b\u0438. \u0411\u0443\u0434\u0434\u0430 \u043e\u0434\u043d\u0430\u0436\u0434\u044b \u0441\u043a\u0430\u0437\u0430\u043b, \u0447\u0442\u043e \u043d\u0430\u043c \u043d\u0443\u0436\u043d\u043e: \u00ab\u041f\u0440\u0438\u043b\u043e\u0436\u0438\u0442\u044c \u0432\u0441\u0451 \u0441\u0432\u043e\u0451 \u0436\u0435\u043b\u0430\u043d\u0438\u0435, \u043d\u0430\u043f\u0440\u0430\u0432\u0438\u0442\u044c \u0432\u0441\u0435 \u0441\u0432\u043e\u0438 \u0443\u0441\u0438\u043b\u0438\u044f, \u0441\u0432\u043e\u0439 \u0443\u043c \u0438 \u0432\u0441\u044e \u0441\u0432\u043e\u044e \u0440\u0435\u0448\u0438\u043c\u043e\u0441\u0442\u044c\u00bb, \u0447\u0442\u043e\u0431\u044b \u0434\u043e\u0441\u0442\u0438\u0447\u044c \u044d\u0442\u0438\u0445 \u0446\u0435\u043b\u0435\u0439. (A.IV, 364) \u0418 \u043a\u043e\u0433\u0434\u0430 \u0411\u0443\u0434\u0434\u0430 \u0433\u043e\u0432\u043e\u0440\u0438\u043b, \u0447\u0442\u043e \u0442\u043e\u0442, \u043a\u0442\u043e \u043f\u0440\u0430\u043a\u0442\u0438\u043a\u0443\u0435\u0442 \u0414\u0445\u0430\u043c\u043c\u0443, \u0434\u043e\u043b\u0436\u0435\u043d \u0431\u044b\u0442\u044c \u00ab\u0432\u043e\u0437\u0434\u0435\u0440\u0436\u0430\u043d\u043d\u044b\u043c \u0432 \u0441\u0432\u043e\u0438\u0445 \u0436\u0435\u043b\u0430\u043d\u0438\u044f\u0445\u00bb, \u0442\u043e \u043e\u043d \u0438\u043c\u0435\u043b \u0432 \u0432\u0438\u0434\u0443, \u0447\u0442\u043e \u043c\u044b \u0434\u043e\u043b\u0436\u043d\u044b \u0441\u0442\u0440\u0435\u043c\u0438\u0442\u044c\u0441\u044f \u043a \u0441\u0442\u043e\u044f\u0449\u0438\u043c \u0446\u0435\u043b\u044f\u043c, \u043d\u0435 \u043f\u043e\u0437\u0432\u043e\u043b\u044f\u044f \u043d\u0430\u0448\u0435\u043c\u0443 \u0441\u0442\u0440\u0435\u043c\u043b\u0435\u043d\u0438\u044e \u043f\u0440\u0435\u0432\u0440\u0430\u0449\u0430\u0442\u044c\u0441\u044f \u0432 \u0430\u043c\u0431\u0438\u0446\u0438\u0438.<\/span><\/p>\n","protected":false},"excerpt":{"rendered":"<p>\u0420\u0443\u043a\u043e\u0432\u043e\u0434\u0441\u0442\u0432\u043e \u043f\u043e \u0411\u0443\u0434\u0434\u0438\u0437\u043c\u0443 \u043e\u0442 \u00ab\u0410\u00bb \u0434\u043e \u00ab\u042f\u00bb \u0414\u043e\u0441\u0442. \u0428\u0440\u0430\u0432\u0430\u0441\u0442\u0438 \u0414\u0445\u0430\u043c\u043c\u0438\u043a\u0430 \u041f\u0435\u0440. \u0441 \u0430\u043d\u0433\u043b.: \u0426\u0432\u0435\u0442\u043a\u043e\u0432\u0430 \u041f\u0430\u0432\u043b\u0430 \u0438\u00a0 Another Story \u0418\u0441\u0442\u043e\u0447\u043d\u0438\u043a\u0438: dhammaeverywhere.ru \u0438\u00a0 \u0410\u043b\u044c\u0442\u0440\u0443\u0438\u0437\u043c \u041f\u0440\u0438\u043d\u044f\u0442\u0438\u0435 \u0441\u0435\u0431\u044f \u0421\u043c\u044b\u0441\u043b \u0436\u0438\u0437\u043d\u0438 \u0424\u0443\u043d\u0434\u0430\u043c\u0435\u043d\u0442\u0430\u043b\u0438\u0437\u043c \u041f\u043e\u0441\u0442\u043e\u044f\u043d\u0441\u0442\u0432\u043e \u041e\u0441\u043d\u043e\u0432\u044b \u043e\u0431\u0449\u0438\u043d\u044b \u0415\u0440\u0435\u0441\u044c \u041f\u0440\u0438\u0437\u043d\u0430\u0442\u0435\u043b\u044c\u043d\u043e\u0441\u0442\u044c \u0425\u043e\u0440\u043e\u0448\u0435\u0435 \u0438 \u043f\u043b\u043e\u0445\u043e\u0435 \u0418\u0441\u0442\u0438\u043d\u0430 \u041a\u0440\u0438\u0442\u0438\u043a\u0430 \u041e\u0431\u0440\u0430\u0449\u0435\u043d\u0438\u0435 \u0432 \u0440\u0435\u043b\u0438\u0433\u0438\u044e \u041f\u0440\u043e\u0441\u0442\u043e\u0442\u0430 \u0425\u0430\u0440\u0430\u043a\u0442\u0435\u0440 \u0438 \u0435\u0433\u043e \u0444\u043e\u0440\u043c\u0438\u0440\u043e\u0432\u0430\u043d\u0438\u0435 \u0427\u0435\u0441\u0442\u043e\u043b\u044e\u0431\u0438\u0435 \u0438 \u0441\u0442\u0440\u0435\u043c\u043b\u0435\u043d\u0438\u0435 &nbsp; \u0410\u043b\u044c\u0442\u0440\u0443\u0438\u0437\u043c \u0410\u043b\u044c\u0442\u0440\u0443\u0438\u0437\u043c \u2013 \u044d\u0442\u043e \u043e\u0431\u0440\u0430\u0437 \u043c\u044b\u0448\u043b\u0435\u043d\u0438\u044f [&#8230;]<\/p>\n<p><a class=\"btn btn-secondary understrap-read-more-link\" href=\"http:\/\/xn--80aaaglc1fo1a.xn--p1ai\/modern_doctrine\/%d0%ba%d1%80%d0%b0%d1%82%d0%ba%d0%b8%d0%b5-%d1%84%d1%80%d0%b0%d0%b3%d0%bc%d0%b5%d0%bd%d1%82%d1%8b-%d0%bd%d0%b0%d1%81%d1%82%d0%b0%d0%b2%d0%bb%d0%b5%d0%bd%d0%b8%d0%b9-4\">\u0427\u0438\u0442\u0430\u0442\u044c \u0434\u0430\u043b\u0435\u0435&#8230;<\/a><\/p>\n","protected":false},"author":1,"featured_media":0,"parent":28,"menu_order":0,"comment_status":"closed","ping_status":"closed","template":"page-templates\/left-sidebarpage.php","meta":[],"_links":{"self":[{"href":"http:\/\/xn--80aaaglc1fo1a.xn--p1ai\/wp-json\/wp\/v2\/pages\/6316"}],"collection":[{"href":"http:\/\/xn--80aaaglc1fo1a.xn--p1ai\/wp-json\/wp\/v2\/pages"}],"about":[{"href":"http:\/\/xn--80aaaglc1fo1a.xn--p1ai\/wp-json\/wp\/v2\/types\/page"}],"author":[{"embeddab
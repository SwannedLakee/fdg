0441\u0442\u044c \u043e\u043f\u0440\u0435\u0434\u0435\u043b\u0435\u043d\u043d\u044b\u0439 \u043e\u043f\u044b\u0442 \u0432 \u043f\u0440\u0430\u043a\u0442\u0438\u043a\u0435 \u043c\u0435\u0434\u0438\u0442\u0430\u0446\u0438\u0438, \u0442\u043e\u0433\u0434\u0430 \u0432\u044b \u0441\u043c\u043e\u0436\u0435\u0442\u0435 \u043f\u0440\u0435\u043e\u0434\u043e\u043b\u0435\u0442\u044c \u0431\u043e\u043b\u044c\u0448\u0443\u044e \u0447\u0430\u0441\u0442\u044c \u0441\u0432\u043e\u0435\u0433\u043e \u0443\u043c\u0441\u0442\u0432\u0435\u043d\u043d\u043e\u0433\u043e \u0438 \u0442\u0435\u043b\u0435\u0441\u043d\u043e\u0433\u043e \u0441\u0442\u0440\u0430\u0434\u0430\u043d\u0438\u044f. \u0415\u0441\u043b\u0438 \u0432\u044b \u0432\u043a\u043b\u0430\u0434\u044b\u0432\u0430\u0435\u0442\u0435 \u0434\u043e\u0441\u0442\u0430\u0442\u043e\u0447\u043d\u043e\u0435 \u043a\u043e\u043b\u0438\u0447\u0435\u0441\u0442\u0432\u043e \u0443\u0441\u0438\u043b\u0438\u0439 \u0438 \u0432\u0440\u0435\u043c\u0435\u043d\u0438, \u0442\u043e \u043f\u0440\u0438 \u0434\u043e\u0441\u0442\u0438\u0436\u0435\u043d\u0438\u0438 \u0430\u0440\u0430\u0445\u0430\u0442\u0441\u0442\u0432\u0430, \u0432\u044b \u0441\u043c\u043e\u0436\u0435\u0442\u0435 \u043d\u0430\u0434\u043e\u043b\u0433\u043e \u0438\u0441\u043a\u043e\u0440\u0435\u043d\u0438\u0442\u044c \u043a\u0430\u043a \u0443\u043c\u0441\u0442\u0432\u0435\u043d\u043d\u043e\u0435, \u0442\u0430\u043a \u0438 \u0442\u0435\u043b\u0435\u0441\u043d\u043e\u0435 \u0441\u0442\u0440\u0430\u0434\u0430\u043d\u0438\u0435. \u0412\u043e \u0432\u0440\u0435\u043c\u044f \u043c\u0435\u0434\u0438\u0442\u0430\u0446\u0438\u0438 \u0432\u044b \u0441\u043c\u043e\u0436\u0435\u0442\u0435 \u043f\u0440\u0435\u043e\u0434\u043e\u043b\u0435\u0442\u044c \u0431\u043e\u043b\u044c, \u0442\u0443\u0433\u043e\u043f\u043e\u0434\u0432\u0438\u0436\u043d\u043e\u0441\u0442\u044c, \u0437\u0443\u0434, \u043e\u043d\u0435\u043c\u0435\u043d\u0438\u0435 \u0438 \u043e\u0441\u0442\u0430\u043b\u044c\u043d\u044b\u0435 \u0432\u0438\u04
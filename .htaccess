# Обрабатываем запросы pm с /ru/
RewriteCond %{REQUEST_URI} ^/ru/
RewriteRule ^ru/(pm)$ /ru/$1.php?expand=true [R=301,L,QSA]


Redirect 301 /ru.php /ru/
RewriteCond %{HTTP:Accept-Language} ^ru_RU [NC]
RewriteRule ^/$ /ru/ [L,R=302]

# language starts with FR
RewriteCond %{HTTP:Accept-Language} ^ru [NC]
RewriteRule ^/$ /ru/ [L,R=302]

# else redirect to the English version
RewriteRule ^/$ / [L,R=302]


<IfModule mod_headers.c>
    # Изображения — кэшировать на полгода (6 месяцев), с immutable
    <FilesMatch "\.(jpg|jpeg|png|gif|svg)$">
        Header set Cache-Control "public, max-age=15552000, immutable"
    </FilesMatch>

    # Шрифты — оставим как есть, тоже можно кэшировать на год, если хочешь
    <FilesMatch "\.(woff2?)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>

    # CSS — умеренно долго (1 месяц)
    <FilesMatch "\.(css)$">
        Header set Cache-Control "public, max-age=2592000"
    </FilesMatch>

    # JS — 1 неделя
    <FilesMatch "\.(js)$">
        Header set Cache-Control "public, max-age=604800"
    </FilesMatch>

    # HTML и JSON — 1 день
    <FilesMatch "\.(html|json)$">
        Header set Cache-Control "public, max-age=86400"
    </FilesMatch>
</IfModule>

# Включить генерацию ETag
<IfModule mod_file_cache.c>
    FileETag MTime Size
</IfModule>


# GZIP compression for text files: HTML, CSS, JS, Text, XML, fonts
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain
  AddOutputFilterByType DEFLATE text/html
  AddOutputFilterByType DEFLATE text/css
  AddOutputFilterByType DEFLATE text/javascript
  AddOutputFilterByType DEFLATE application/javascript
  AddOutputFilterByType DEFLATE application/json
  AddOutputFilterByType DEFLATE application/xml
  AddOutputFilterByType DEFLATE application/xhtml+xml
  AddOutputFilterByType DEFLATE image/svg+xml
  AddOutputFilterByType DEFLATE font/ttf
  AddOutputFilterByType DEFLATE font/woff
  AddOutputFilterByType DEFLATE font/woff2
</IfModule>




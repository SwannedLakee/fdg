# Правило для запросов без /ru/
RewriteCond %{REQUEST_URI} !^/ru/
RewriteRule ^(mn\d+|dn\d+|dhp\d+|iti\d+|ja\d+|pj\d+|ss\d+|ay\d+|np\d+|pc\d+|pd\d+|sk\d+|kd\d+|pvr\d+)$ /read/?q=$1 [R=301,L,QSA]
